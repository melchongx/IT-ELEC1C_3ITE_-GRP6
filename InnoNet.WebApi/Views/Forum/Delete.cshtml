@model InnoNet.WebApi.Models.Forum.DeleteForumModel

<h2>Delete Forum</h2>
<p>Are you sure you want to delete the forum "@Model.Title"?</p>

<p>
    <strong>Title:</strong> @Model.Title<br />
    <strong>Description:</strong> @Model.Description<br />
    <strong>Image URL:</strong>  <div id="userProfileImage" style="background-image: url(@Model.ImageUrl)"></div>
</p>

<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Forum" class="btn btn-secondary">Cancel</a>
</form>
