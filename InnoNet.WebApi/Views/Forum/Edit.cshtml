@model InnoNet.WebApi.Models.Forum.EditForumModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Edit category on the forum
        </div>
    </div>
    <div class="row frontPageContent">
        <div id="createForumSection">
            <form asp-action="EditForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="Title">Category</label>
                    <input asp-for="Title" class="form-control" required placeholder="Edit category title" maxlength="25" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" required placeholder="Edit category description" maxlength="100" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Edit category image</label><br />
                    <label class="btn btn-default btn-file">
                        Choose <input asp-for="ImageUpload" type="file" accept="image/*" style="display:none" />
                    </label>
                </div>
                <input asp-for="Id" type="hidden" />
                <button type="submit" id="newFormBtn" class="btn btn-submitPost">Edit</button>
            </form>
        </div>
    </div>
</div>
