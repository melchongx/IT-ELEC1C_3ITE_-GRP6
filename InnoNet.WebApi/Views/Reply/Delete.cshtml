@model InnoNet.WebApi.Models.Reply.DeleteReplyModel

<h2>Delete Reply</h2>
<p>Are you sure you want to delete this reply by "@Model.AuthorName"?</p>

<p>
    <strong>Author:</strong> @Model.AuthorName<br />
    <strong>Content:</strong> @Model.Content<br />
    <strong>Post Title:</strong> @Model.PostTitle
</p>

<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Post" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
</form>
